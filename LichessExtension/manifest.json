{
  "manifest_version": 2,

  "name": "Lichess trap",
  "version": "2.0",
  "permissions": [ "tabs", "storage", "<all_urls>" ],
  "content_scripts": [
    {
      // Change 'matches' attribute to load content
      // script only in pages you want to.
      "matches": [ "*://*.lichess.org/*" ],
      "js": [ "popup/chess.js", "popup/contentscript.js" ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "images/horse_100.png"
    },
    "default_title": "Lichess trap",
    "default_popup": "popup/popup.html"
  }
}
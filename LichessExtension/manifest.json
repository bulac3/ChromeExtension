{
  "manifest_version": 2,

  "name": "Lichess trap",
  "version": "2.0",
  "permissions": [ "tabs", "storage", "<all_urls>" ],
  "content_scripts": [
    {
      "matches": [ "*://*.lichess.org/*" ],
      "js": [ "content_scripts/chess.js", "content_scripts/initial_traps.js", "content_scripts/content_script.js" ]
    }
  ],
  "externally_connectable": {
    "matches": [ "*://*.lichess.org/*" ]
  },
  "browser_action": {
    "default_icon": {
      "64": "images/horse_100.png"
    },
    "default_title": "Lichess trap",
    "default_popup": "popup/popup.html"
  }
}